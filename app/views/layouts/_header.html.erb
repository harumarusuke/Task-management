<header class="navbar navbar-fixed-top navbar-inverse" style="background-color: #0000ff;">
  <div class="container">
    <em><%= link_to "Task management App", root_path, id: "logo" %></em>
    <nav>
      <ul class="nav navbar-nav navbar-right" >
        
        <li><%= link_to "トップ", root_path, id:"rightlogo" %></li>
        
          <% if logged_in? %>
            <% if current_user.admin? %>
              <li><%= link_to "利用者一覧", users_path, id:"right2logo" %></li>
            <% end %>
            <li><%= link_to "タスク作成", new_user_task_path(current_user), id:"rightlogo1" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="right3logo" style="background-color: #0000ff;">
              <%= current_user.name %> <b class="caret"></b>
            </a>
           
            <ul class="dropdown-menu">
              <li class="dropdown-header">user</li>
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="dropdown-header">task</li>
              <li><%= link_to "タスク一覧", user_tasks_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

